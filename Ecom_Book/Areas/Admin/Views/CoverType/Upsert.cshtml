@model Ecom_Book.Models.CoverType
@{ 
    ViewData["Title"] = "Upsert";
    var title = Model.ID != 0 ? "Edit CoverType" : "NEW CoverType";
    
} 
<form method="post">
    <div class="row">
        <div class="col-12 border-bottom">
            <h2 class=" text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <div class="col-8">
            <div class=" form-group row p-2 m-2 ">
                <div class="col-4">
                    <label asp-for=" Name"></label>
                </div>

                <div class=" col-8">
                    <input autofocus asp-for=" Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class=" form-group row p-2 m-2">
                <div class="col-8 offset-4">
                    @if (Model.ID != 0)
                    {
                        <partial name="_EditAndBackTOListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToList" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{ 
    <partial name="_ValidationScriptsPartial" />
}