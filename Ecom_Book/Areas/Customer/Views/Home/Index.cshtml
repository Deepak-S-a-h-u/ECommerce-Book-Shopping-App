@model IEnumerable<Ecom_Book.Models.Product>

<div class="text-center">
    
    <marquee scrollamount="15" behavior=alternate style="font-size:4vh" class="bg-info" >Book Shopping Web Application</marquee>
   </div> 
<div class="row">

    @foreach (var Product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border: 2px;">
                        <div class="vh-10 vw-30" >
                            <img src="@Product.ImageUrl" class="card-img-top rounded" style="border:0px; height:40vh; width:100%"/>
                        </div>
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@Product.Title</b></p>
                            <p class="card-title text-primary">by <b>@Product.Author</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>List Price: <strike><b class="">₹@Product.ListPrice.ToString("0.00")</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">As low as: <b class="">₹@Product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@Product.ID">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>